  <p>Rating: <%= movie.rating %>/10</p>
  <p>Description: <%= movie.overview %></p>

  <div class="col"><img src="<%= movie.poster_url %>" alt="">
  <%= link_to "Delete bookmark", @bookmark, method: :delete, data: { confirm: "Are you sure?" },  class: "btn btn-danger" %>

  </div></div>

  <% end %>
  <br>
  <%= link_to "Go back", lists_path, class: "btn btn-dark" %>
  <%= link_to "Delete list", @list, method: :delete, data: { confirm: "Are you sure?" },  class: "btn btn-danger" %>

  <%= link_to "Add movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
